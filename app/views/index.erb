<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div id="statistics">
      <% @statistics.each do |key, value| %>
      <% value = value.join(", ") if value.class == Array %>
      <p><%= "#{key.to_s}: #{value.to_s} "%></p>
      <% end %>
      <p>List of URLs:
        <% @list_of_paths.each_with_index do |path, index| %>
        <p><a href="<%=url("/sources/#{identifier}/urls#{path}")%>"><%=@list_of_urls[index]%></a></p>
        <% end %>
      </p>
      <p>List of Events:
        <% @list_of_events.each do |event_name| %>
        <p><a href="<%=url("/sources/#{identifier}/events/#{event_name}")%>"><%=event_name%></a></p>
        <% end %>
      </p>
    </div>
  </body>
</html>
